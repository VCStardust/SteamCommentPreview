<Window x:Class="SteamCommPreview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamCommPreview"
        mc:Ignorable="d"
        Title="MainWindow" Width="960" Height="640">
    <Grid>
        <ComboBox x:Name="ModeSwitchCB" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="265" IsEnabled="False"/>
        <TextBox x:Name="InputTextB" Text="TextBox" TextWrapping="Wrap" Margin="10,36,524,10"/>
        <Frame x:Name="OutputFrame" Content="Frame" Margin="433,10,10,10" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="AutoRefreshCB" HorizontalAlignment="Left" VerticalAlignment="Top" Width="78" Margin="280,10,0,0">
            <ComboBoxItem Content="∞(手动)" HorizontalAlignment="Left" Width="76"/>
            <ComboBoxItem Content="5s" HorizontalAlignment="Left" Width="76"/>
            <ComboBoxItem Content="15s" HorizontalAlignment="Left" Width="76"/>
            <ComboBoxItem Content="30s" HorizontalAlignment="Left" Width="76"/>
            <ComboBoxItem Content="60s" HorizontalAlignment="Left" Width="76"/>
        </ComboBox>
        <Button Content="刷新" Margin="363,10,524,570"/>
    </Grid>
</Window>
